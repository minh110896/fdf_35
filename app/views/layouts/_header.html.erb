<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts._header.App"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts._header.home"), root_path %></li>
        <li><%= link_to t("layouts._header.help"), help_path %></li>
        <% if session[:cart_id].present? %>
          <li><%= link_to t("layouts._header.cart"), cart_path(session[:cart_id]) %></li>
        <% end %>
        <% if logged_in?  %>
          <% if current_user.admin?  %>
            <li><%= link_to t("layouts._header.category"), admin_category_index_path %></li>
            <li><%= link_to t("layouts._header.product"), admin_product_index_path %></li>
            <li><%= link_to t("layouts._header.users"), admin_users_path %></li>
            <li><%= link_to t("layouts._header.order"), "#"  %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <%= t("layouts._header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts._header.profile"), current_user %></li>
              <li><%= link_to t("layouts._header.setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts._header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layouts._header.log"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
